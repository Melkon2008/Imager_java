<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/ContrastImage"
    android:orientation="vertical">

    <Button
        android:layout_margin="10dp"
        android:id="@+id/btncontrastimage2"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select File"
        android:backgroundTint="@color/Yellow"
        android:textColor="@color/seri"
        />

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Yellow"> <!-- Ваш RelativeLayout -->

        <LinearLayout
            android:id="@+id/glav_recaycl"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Item Name"
                    android:textColor="@color/seri"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblItemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblItemName"
                    android:layout_marginStart="10px"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="2dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:text="Item Details" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layaut_open_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@id/glav_recaycl">

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
    <Button
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="@color/Yellow"
        android:textColor="@color/seri"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus_split"
        android:text="+"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />

    <Button
        android:id="@+id/save_split_pdf"
        android:text="Save"
        android:textColor="@color/seri"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Yellow"/>







</LinearLayout>
