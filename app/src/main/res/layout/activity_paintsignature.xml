<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/seri"
    android:id="@+id/Painting_lay">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/glav_signature_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/Yellow"
            android:textColorHint="@color/Yellow"
            app:hintTextColor="@color/Yellow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write Your Signature"
                android:textColor="@color/Yellow"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView

            android:layout_marginTop="20dp"
            android:text="Your Signature"
            android:textColor="@color/Yellow"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="40dp"
            android:fontFamily="@font/singature1"
            android:id="@+id/textforsignature"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:textColor="@color/glxavor_Seri"
                    android:backgroundTint="@color/Yellow"
                    android:textSize="24dp"
                    android:id="@+id/btnsignature1"
                    android:fontFamily="@font/singature1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Signature1" />

                <Button
                    android:textColor="@color/glxavor_Seri"
                    android:backgroundTint="@color/Yellow"
                    android:textSize="24dp"
                    android:id="@+id/btnsignature2"
                    android:fontFamily="@font/signature2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Signature2" />

                <Button
                    android:textColor="@color/glxavor_Seri"
                    android:backgroundTint="@color/Yellow"
                    android:textSize="23dp"
                    android:id="@+id/btnSignature3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Signature3"
                    android:fontFamily="@font/signature3"/>



                <Button
                    android:textColor="@color/glxavor_Seri"
                    android:backgroundTint="@color/Yellow"
                    android:textSize="24dp"
                    android:id="@+id/btnsignature4"
                    android:fontFamily="@font/signature4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Signature5" />


            </LinearLayout>
        </HorizontalScrollView>

        <SeekBar
            android:id="@+id/SeekbarSignatures"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <Button
                android:textColor="@color/glxavor_Seri"
                android:backgroundTint="@color/Yellow"
                android:id="@+id/btnbold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bold"
                android:textStyle="bold" />

            <Button
                android:textColor="@color/glxavor_Seri"
                android:backgroundTint="@color/Yellow"
                android:id="@+id/btnitalic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="italic"
                android:textStyle="italic" />

            <Button
                android:textColor="@color/glxavor_Seri"
                android:backgroundTint="@color/Yellow"
                android:id="@+id/btnnormal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="normal"
                android:textStyle="normal" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
