<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/seri</item>
        <item name="colorPrimaryVariant">@color/qichm_Seri</item>
        <item name="colorOnPrimary">@color/Yellow_bacot</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Yellow</item>
        <item name="colorSecondaryVariant">@color/qichm_Seri</item>
        <item name="colorOnSecondary">@color/Yellow</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="buttonStyle">@color/seri</item>

        <item name="android:windowBackground">@color/Yellow</item>

    </style>

    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:windowBackground">@color/Yellow</item>
    </style>
</resources>