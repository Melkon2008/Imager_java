<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/white"
    android:orientation="vertical">




        <Button
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:id="@+id/openConvertImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/file"
            android:drawablePadding="8dp"
            android:text="convert images"
            android:textColor="@color/seri"
            android:textStyle="bold"
            android:gravity="left|center_vertical"
            android:backgroundTint="@color/Yellow"/>

        <Button
            
            android:backgroundTint="@color/Yellow"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:id="@+id/openMargeFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="merge files"
            android:textColor="@color/seri"
            android:textStyle="bold"
            android:drawableRight="@drawable/file1"
            android:drawablePadding="8dp"
            android:gravity="left|center_vertical"/>








    <Button
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:id="@+id/openContrastImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Split pdf"
        android:textColor="@color/seri"
        android:textStyle="bold"
        android:drawableRight="@drawable/document"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/Yellow"
        android:gravity="left|center_vertical"/>




</LinearLayout>