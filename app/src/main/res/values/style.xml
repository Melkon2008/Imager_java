<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Define box stroke color -->
        <item name="boxStrokeColor">@color/Yellow</item>
        <!-- Define hint text color -->
        <item name="android:textColorHint">@color/seri</item>
        <!-- Define background color -->
        <item name="android:background">@color/Yellow</item>
        <!-- Define hint text color for pre-filled text -->
        <item name="hintTextColor">@color/seri</item>





    </style>

    <style name="NavigationButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>






</resources>